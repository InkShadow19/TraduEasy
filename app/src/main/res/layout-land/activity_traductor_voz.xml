<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TraductorVoz">

    <TextView
        android:id="@+id/textViewTV"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:background="@drawable/fondo_palo_rosa"
        android:fontFamily="@font/tt_interphases_pro_trial_regular"
        android:paddingStart="105dp"
        android:paddingTop="10dp"
        android:text="TRADUCTOR"
        android:textColor="@color/azul_dark"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/textViewVoz"
        android:layout_width="480dp"
        android:layout_height="180dp"
        android:layout_margin="30dp"
        android:background="@drawable/fondo_plomo_claro"
        android:enabled="true"
        android:fontFamily="@font/tt_interphases_pro_trial_regular"
        android:hint="Traducción..."
        android:paddingStart="25dp"
        android:paddingTop="25dp"
        android:paddingEnd="25dp"
        android:paddingBottom="25dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewMic"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnVoz"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewEspIng"
        app:layout_constraintVertical_bias="0.511" />

    <TextView
        android:id="@+id/textViewEspIng"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:background="@drawable/fondo_palo_rosa"
        android:fontFamily="@font/tt_interphases_pro_trial_regular"
        android:paddingStart="45dp"
        android:paddingTop="10dp"
        android:text="Español a Inglés"
        android:textColor="@color/azul_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnVoz"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/imgBtnVoz"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316" />

    <TextView
        android:id="@+id/textViewMic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tt_interphases_pro_trial_regular"
        android:text="Para hablar, pulse el micrófono"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

    <ImageButton
        android:id="@+id/imgBtnVoz"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/borde_boton"
        android:contentDescription="Microfono"
        android:onClick="BtnHablar"
        app:layout_constraintBottom_toTopOf="@+id/textViewMic"
        app:layout_constraintEnd_toEndOf="@+id/textViewMic"
        app:layout_constraintStart_toStartOf="@+id/textViewMic"
        app:layout_constraintTop_toBottomOf="@+id/textViewEspIng"
        app:layout_constraintVertical_bias="0.514"
        app:srcCompat="@mipmap/icon_micro" />

    <ImageButton
        android:id="@+id/btnVolver2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="Volver"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewTV"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@mipmap/icono_volver" />

</androidx.constraintlayout.widget.ConstraintLayout>